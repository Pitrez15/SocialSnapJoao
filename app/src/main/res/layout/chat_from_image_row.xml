<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imageViewImageMessageChatFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxWidth="240dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewImageUserChatFrom"
        app:layout_constraintStart_toEndOf="@+id/imageViewImageUserChatFrom"
        app:layout_constraintTop_toTopOf="@+id/imageViewImageUserChatFrom" />

    <ImageView
        android:id="@+id/imageViewImageUserChatFrom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_account_box_24" />
</androidx.constraintlayout.widget.ConstraintLayout>